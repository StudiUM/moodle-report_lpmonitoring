{{!
    Competency filter template.

    Classes required for JS:
    * learningplan

    Context variables required for this template:
    * templates
      * shortname
      * id
}}
<form class="mform" id="reportFilter" accept-charset="utf-8" method="post" autocomplete="off">
    <fieldset id="id_displayinfo" class="clearfix collapsible">
        <legend class="ftoggler">
            <a href="#" class="fheader" role="button" aria-controls="id_displayinfo" aria-expanded="true">{{#str}}filter, report_lpmonitoring{{/str}}</a>
        </legend>
        <div class="fcontainer clearfix">
            <div class="fitem fitem_fradio fitem_fradiogroup">
                <div class="fitemtitle">
                    <label for="template">{{#str}}filterby, report_lpmonitoring{{/str}}</label>
                </div>
                <div class="felement fradio radio radio-primary">
                    <span>
                        <input type="radio" name="optionfilter" id="template" value="template" checked disabled="disabled">
                        <label for="template">{{#str}}template, tool_lp{{/str}}</label>
                    </span>
                </div>
            </div>
            <div class="fitem fitem_fradio femptylabel">
                <div class="felement fradio radio radio-primary">
                    <span>
                        <input type="radio" name="optionfilter" id="student" value="student" disabled="disabled">
                        <label for="student">{{#str}}user{{/str}}</label>
                    </span>
                </div>
            </div>
            <div class="templatefilter">
                <div class="fitem fitem_fselect">
                    <div class="fitemtitle">
                        <label for="templateSelectorReport">{{#str}}template, tool_lp{{/str}}</label>
                    </div>
                    <div class="felement fselect">
                        <select id="templateSelectorReport" class="form-control">
                            <option value="">{{#str}}selectlearningplantemplate, report_lpmonitoring{{/str}}</option>
                            {{#templates}}
                            <option value="{{id}}">{{shortname}}</option>
                            {{/templates}}
                        </select>
                    </div>
                </div>
                <div class="fitem for-autocomplete fitem_fselect">
                    <div class="fitemtitle">
                        <label for="learningplanSelectorReport">{{#str}}usersfromtemplate, report_lpmonitoring{{/str}}</label>
                    </div>
                    <div class="felement fautocomplete">
                        <select style="display: none" data-scalesortorder="" data-scalefilter="" id="learningplanSelectorReport" data-templateid="" data-scalefilterapply="" class="form-control">
                        </select>
                    </div>
                </div>
                <div class="fitem advanced fitem_scales" style="display: none">
                    <div class="fitemtitle">
                        <label>{{#str}}scalesfortemplate, report_lpmonitoring{{/str}}</label>
                    </div>
                    <div class="felement fscales">
                        <div id="scale"></div>
                    </div>
                    <div class="fitemtitle" id="scalefilterapply">
                        <label>{{#str}}scalefilterby, report_lpmonitoring{{/str}}</label>
                    </div>
                    <div class="felement fscalefilter">
                        <div id="scalefilter"></div>
                    </div>
                    <div class="fitemtitle" id="scalesortorderlabel">
                        <label >{{#str}}sort{{/str}}</label>
                    </div>
                    <div class="felement fscalesortorder">
                        <div id="scalesortorder"></div>
                    </div>
                </div>
                <div class="fitem moreless-actions hidden">
                    <div class="felement">
                        <a href="#" class="moreless-toggler show-toggler" role="button">{{#str}}showmore, form{{/str}}</a>
                        <a href="#" class="moreless-toggler less-toggler hidden" role="button">{{#str}}showless, form{{/str}}</a>
                    </div>
                </div>
            </div>
            <div class="studentfilter disabled-option">
                <div class="fitem for-autocomplete fitem_fselect">
                    <div class="fitemtitle">
                        <label for="studentSelectorReport">{{#str}}user{{/str}}</label>
                    </div>
                    <div class="felement fautocomplete">
                        <select data-capability="moodle/competency:planview" id="studentSelectorReport" class="form-control" disabled="disabled">
                        </select>
                    </div>
                </div>
                <div class="fitem fitem_fselect">
                    <div class="fitemtitle">
                        <label for="studentPlansSelectorReport">{{#str}}learningplans, tool_lp{{/str}}</label>
                    </div>
                    <div class="felement fselect">
                        <select id="studentPlansSelectorReport" class="form-control" disabled="disabled">
                            <option>{{#str}}nolearningplanavailable, report_lpmonitoring{{/str}}</option>
                        </select>
                    </div>
                </div>
            </div>
            <div class="fitem fitem_fgroup femptylabel">
                <fieldset class="felement fgroup">
                    <button id="submitFilterReportButton" type="submit" class="btn btn-primary" disabled>
                        {{#str}}apply, report_lpmonitoring{{/str}}
                        <i class="fa fa-refresh fa-spin"></i>
                    </button>
                </fieldset>
            </div>
        </div>
    </fieldset>
</form>
